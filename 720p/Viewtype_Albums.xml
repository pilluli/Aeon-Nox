<includes>
 <include name="AlbumsThumbs">
    <control type="group">
      <control type="image">
        <posx>5</posx>
        <posy>150</posy>
        <width>200</width>
        <height>200</height>
        <fadetime>200</fadetime>
        <texture background="true" diffuse="thumbs/cdcover_mask.png" fallback="DefaultAudio.png">$VAR[MusicShowcaseItem0Var]</texture>
        <aspectratio scalediffuse="false">stretch</aspectratio>
      </control>
      <control type="image">
        <posx>5</posx>
        <posy>150</posy>
        <width>200</width>
        <height>200</height>
        <fadetime>200</fadetime>
        <aspectratio scalediffuse="false" align="right">scale</aspectratio>
        <texture diffuse="thumbs/cdcover_mask.png">thumbs/poster_glass.png</texture>
        <bordertexture border="-13">thumbs/cd_shadow.png</bordertexture>
      </control>
      <control type="image">
        <posx>5</posx>
        <posy>350.5</posy>
        <width>200</width>
        <height>200</height>
        <fadetime>200</fadetime>
        <texture background="true" flipy="true" diffuse="thumbs/cdcover_mask_reflect.png" fallback="DefaultAudio.png">$VAR[MusicShowcaseItem0Var]</texture>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <animation effect="fade" start="100" end="30" time="200" reversible="true">Focus</animation>
        <animation effect="fade" start="30" end="100" time="200" reversible="true">UnFocus</animation>
      </control>
    </control>
  </include>


  <include name="AlbumsView">
    <control type="group">
      <visible>Control.IsVisible(57)</visible>
    <control type="fixedlist" id="57">
    <posx>-80</posx>
    <posy>250</posy>
    <width>1400</width>
    <height>500</height>
    <onleft>57</onleft>
    <onright>57</onright>
    <onup>9000</onup>
    <ondown>70</ondown>
    <orientation>horizontal</orientation>
    <viewtype label="132">BigWrap</viewtype>
    <pagecontrol>70</pagecontrol>
    <scrolltime tween="quadratic" easing="out">200</scrolltime>
    <focusposition>1</focusposition>
    <include>Animation_OpenCloseZoom</include>
    <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(110)">Conditional</animation>
    <itemlayout width="210" height="500">
      <include>AlbumsThumbs</include>
    </itemlayout>
    <focusedlayout width="210" height="500">
      <control type="group">
        <animation effect="zoom" center="auto" start="100" end="130" time="200" tween="quadratic" easing="out">Focus</animation>
        <animation effect="zoom" center="auto" start="130" end="100" time="200" tween="quadratic" easing="out">Unfocus</animation>
        <include>AlbumsThumbs</include>
      </control>
    </focusedlayout>
    </control>
        <control type="group">
      <visible>![Control.HasFocus(70)|Control.HasFocus(110)]</visible>
      <include>Animation_OpenCloseZoom</include>
      <include>Animation_VisibleChange200</include>
      <control type="label">
        <posx>130</posx>
        <posy>670</posy>
        <width>830</width>
        <align>left</align>
        <aligny>center</aligny>
        <font>Font_Info_Caps</font>
        <textcolor>floor</textcolor>
        <shadowcolor>floorshadow</shadowcolor>
        <label>[UPPERCASE]$VAR[SecondLabelVar][/UPPERCASE]</label>
      </control>
      <control type="label">
        <posx>130</posx>
        <posy>693</posy>
        <width>830</width>
        <align>left</align>
        <aligny>center</aligny>
        <font>Font_ShowcaseMainLabel2_Caps</font>
        <scroll>true</scroll>
        <scrollspeed>50</scrollspeed>
        <textcolor>floor</textcolor>
        <shadowcolor>floorshadow</shadowcolor>
        <label>[UPPERCASE]$VAR[FirstLabelVar][/UPPERCASE]</label>
      </control>
    </control>
  <control type="scrollbar" id="70">
        <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(70)">Conditional</animation>
        <onup>57</onup>
        <ondown condition="Skin.HasSetting(FullScreenFanart)|Player.HasVideo">SetFocus(110)</ondown>
      </control>
    </control>
  </include>
</includes>
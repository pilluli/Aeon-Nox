        <pulseonselect>yes</pulseonselect>
        <onup>516</onup>
        <ondown>SetFocus(109)</ondown>
        <showonepage>true</showonepage>
        <orientation>horizontal</orientation>
      </control>
      <control type="image">
        <description>osd bar bottom</description>
        <posx>0</posx>
        <posy>125r</posy>
        <width>1280</width>
        <height>125</height>

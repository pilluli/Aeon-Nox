          </control>
          <control type="label">
            <posx>111</posx>
            <posy>155</posy>
            <width>200</width>
            <height>25</height>
            <font>Font_Info</font>
            <textcolor>grey2</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>center</align>
            <aligny>center</aligny>
            <info>ListItem.Label</info>
          </control>
          <control type="image">
            <posx>186</posx>
            <posy>130</posy>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[ListItem.Overlay]</texture>
          </control>
        </itemlayout>
        <focusedlayout height="179" width="222">
          <control type="image">
            <posx>6</posx>
            <posy>2</posy>
            <width>210</width>
            <height>156</height>
            <bordertexture border="5">featured/tile_fo.png</bordertexture>
            <bordersize>5</bordersize>
            <texture background="true" fallback="DefaultGenre.jpg">$VAR[ThumbnailVar]</texture>
          </control>
          <control type="label">
            <posx>111</posx>
            <posy>155</posy>
            <width>200</width>
            <height>25</height>
            <font>Font_Info</font>
            <textcolor>white</textcolor>
            <selectedcolor>selected</selectedcolor>
            <align>center</align>
            <aligny>center</aligny>
            <info>ListItem.Label</info>
          </control>
          <control type="image">
            <posx>186</posx>
            <posy>130</posy>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[ListItem.Overlay]</texture>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <posx>1210</posx>
        <posy>88</posy>
        <width>6</width>
        <height>535</height>
        <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(60)">Conditional</animation>
        <include>CommonVerticalScrollbar</include>
        <onleft>551</onleft>
        <onright>9000</onright>
      </control>
    </control>
  </include>
</includes>
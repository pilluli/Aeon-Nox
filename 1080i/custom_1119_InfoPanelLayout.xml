<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1119">
    <onload condition="stringcompare(Skin.String(actualViewtype),showcasemovies)">SetProperty(Viewtype,501)</onload>
    <onload condition="stringcompare(Skin.String(actualViewtype),landscape)">SetProperty(Viewtype,503)</onload>
    <onload condition="stringcompare(Skin.String(actualViewtype),showcasedvd)">SetProperty(Viewtype,504)</onload>
    <onload condition="stringcompare(Skin.String(actualViewtype),banners)">SetProperty(Viewtype,508)</onload>
    <onload condition="Container.Content(tvshows)">SetProperty(Area,TV)</onload>
    <onload condition="Container.Content(movies)">SetProperty(Area,Movies)</onload>
    <defaultcontrol always="true">450</defaultcontrol>
    <zorder>0</zorder>
    <coordinates>
        <system>1</system>
    </coordinates>
    <controls>
        <control type="panel" id="450">
            <width>300</width>
            <height>1080</height>
            <itemgap>0</itemgap>
            <orientation>vertical</orientation>
            <onleft>Dialog.Close(1119)</onleft>
            <onleft>ActivateWindow(1126)</onleft>
            <onup>1625</onup>
            <ondown>1625</ondown>
            <onright>Dialog.Close(1119)</onright>
            <onright>ActivateWindow(1126)</onright>
            <onback>Dialog.Close(1119)</onback>
            <onback>ActivateWindow(1126)</onback>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="400" reversible="true" />
                <effect type="zoom" end="180,100" time="400" easing="out" tween="cubic" />
            </animation>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" delay="400" time="200" reversible="true" />
            </animation>
            <itemlayout width="450" height="260">
                <control type="image">
                    <width>279</width>
                    <height>189</height>
                    <info>ListItem.ActualIcon</info>
                </control>
                <control type="label">
                    <posx>140</posx>
                    <posy>180</posy>
                    <width>279</width>
                    <height>30</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>Font_Reg19</font>
                    <textcolor>bcicon</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="450" height="260">
                <control type="image">
                    <width>279</width>
                    <height>189</height>
                    <info>ListItem.Thumb</info>
                </control>
                <control type="label">
                    <posx>140</posx>
                    <posy>180</posy>
                    <width>279</width>
                    <height>30</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>Font_Reg19</font>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
            <content>
                <item id="1">
                    <label>$LOCALIZE[31198]</label>
                    <icon>views/extrathumbs.png</icon>
                    <thumb>views/extrathumbs_focus.png</thumb>
                    <onclick>Skin.SetString(InfoPanel$INFO[Window.Property(Area)]$INFO[Window.Property(Viewtype)],extrathumbs)</onclick>
                    <visible>Container.Content(movies)</visible>
                </item>
                <item id="2">
                    <label>$LOCALIZE[20445]</label>
                    <icon>views/fanart.png</icon>
                    <thumb>views/fanart_focus.png</thumb>
                     <onclick>Skin.SetString(InfoPanel$INFO[Window.Property(Area)]$INFO[Window.Property(Viewtype)],fanart)</onclick>
                </item>
                <item id="3">
                    <label>$LOCALIZE[31271]</label>
                    <icon>views/poster.png</icon>
                    <thumb>views/poster_focus.png</thumb>
                    <onclick>Skin.SetString(InfoPanel$INFO[Window.Property(Area)]$INFO[Window.Property(Viewtype)],poster)</onclick>
                </item>
                <item id="4">
                    <label>$LOCALIZE[31287]</label>
                    <icon>views/fourthumbs.png</icon>
                    <thumb>views/fourthumbs_focus.png</thumb>
                    <onclick>Skin.SetString(InfoPanel$INFO[Window.Property(Area)]$INFO[Window.Property(Viewtype)],fourthumbs)</onclick>
                </item>
            </content>
        </control>
        <control type="radiobutton" id="1625">
            <colordiffuse>$VAR[FocusTextureColorVar]</colordiffuse>
            <posy>1020</posy>
            <height>60</height>
            <width>278</width>
            <texturenofocus>settings/listselect_nf.png</texturenofocus>
            <texturefocus>views/tripanel/listselect_fo.png</texturefocus>
            <alttexturenofocus>settings/listselect_nf.png</alttexturenofocus>
            <alttexturefocus>views/tripanel/listselect_fo.png</alttexturefocus>
            <textcolor>grey2</textcolor>
            <focusedcolor>white6</focusedcolor>
            <disabledcolor>grey3</disabledcolor>
            <textoffsetx>10</textoffsetx>
            <textoffsety>2</textoffsety>
            <aligny>center</aligny>
            <onup>450</onup>
            <ondown>450</ondown>
            <onleft>Dialog.Close(1119)</onleft>
            <onright>Dialog.Close(1119)</onright>
            <onright>SetFocus(50)</onright>
            <font>Font_Reg19</font>
            <include>Animation_CommonFade</include>
            <radiowidth>98</radiowidth>
            <radioposx>198</radioposx>
            <label>31696</label>
            <onclick>Skin.ToggleSetting(no_infopane_panel)</onclick>
            <selected>Skin.HasSetting(no_infopane_panel)</selected>
        </control>
    </controls>
</window>